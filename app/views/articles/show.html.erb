<br><br><br><br>
<div class="container">
<p>
    <strong>Titulo:</strong>
    <%= @article.title %>
</p>

<p>
    <strong>Texto:</strong>
    <%= @article.text %>
</p>
<h2>Add a comment:</h2>
<%= form_for [ @article, @article.comments.build ], local: true do |form|%>
  <p>
    <%= form.label :commenter %><br>
    <%= form.text_field :commenter %>
  </p>
  <p>
    <%= form.label :body %><br>
    <%= form.text_area :body %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>
<%= link_to 'Voltar', articles_path %>
<%= link_to 'editar', edit_article_path(@article) %>
</div>