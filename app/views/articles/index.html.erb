<h1>Lista de Artigos</h1>
<div class="container">
  <table>
    <tr>
      <th>Titulo</th>
      <th>Texto</th>
      <th colspan = "2"></th>
    </tr>

    <% @article.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.text %></td>
      </tr>
      <tr>
        <td><%= link_to 'Mostrar', article_path(article) %></td>
        <% if current_user == article.user %>
          <td><%= link_to 'editar', edit_article_path(article) %></td>
          <td><%= link_to 'Deletar', article_path(article),
            method: :delete,
              data: { confirm: 'Tem Certeza que deseja deletar ?' } %></td>
        <% end %>
      </tr>
    <% end %>

  </table>
    <%= link_to 'Pagina Inicial', root_path %>
    <%= link_to 'Criar Novo Artigo', new_article_path %>
</div>