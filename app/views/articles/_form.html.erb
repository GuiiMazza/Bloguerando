    <div class="container">
      <h2>Novo Artigo</h2>
      <%= form_for @article, local: true do |form| %>
        <% if @article.errors.any? %>
            <div id="error_explanation">
              <h2>
                <%= pluralize(@article.errors.count, "Erros") %>, Este artigo n√£o pode ser salvo pois existem erros !!!
                <% @article.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </h2>
            </div>
        <% end %>
            <p>
              <%= form.label :title, 'Titulo' %><br>
              <%= form.text_field :title, size: "50x10" %>
            </p>

            <p>
              <%= form.label :text, 'Texto' %><br>
              <%= form.text_area :text, size: "50x10" %>
            </p>
            <p>
              <%= form.submit "Criar Artigo", class:"btn btn-outline-dark" %>
            </p>
      <% end %>
    </div>
