<h2>Novo Artigo</h2>
  <%= form_for @article, local: true do |form| %>
    <% if @article.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@article.errors.count, "Erros") %>, Este artigo n√£o pode ser salvo pois existem erros !!!</h2>
        <ul>
          <% @article.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
      <div class="form-group">
        <div class="col-6">
        <%= form.label :title, 'Titulo' %><br>
        <%= form.text_field :title, class:"form-control" %>
        </div>
      </div>
    <div class="form-group">
      <div class="col-6">
          <%= form.label :text, 'Texto' %><br>
          <%= form.text_area :text, size: "50x10", class:"form-control" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-6">
        <p>
          <%= form.submit "Criar Artigo", class:"btn btn-success form-control" %>
        </p>
      </div>
    </div>
<% end %>